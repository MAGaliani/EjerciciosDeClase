<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_degree"
    tools:context="com.magaliani.galoweather.TiempoActualFragment">

    <ImageView
        android:id="@+id/ImageViewfondo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="376dp"
        android:layout_height="216dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_rounded"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="376dp"
        android:layout_height="94dp"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/background_rounded"
        app:layout_constraintBottom_toBottomOf="@+id/ImageViewfondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>

    <TextView
        android:id="@+id/textViewCity"
        android:layout_width="367dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Ciudad"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/autoCompleteTextView" />

    <ImageView
        android:id="@+id/imageViewWeather"
        android:layout_width="123dp"
        android:layout_height="97dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCity"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_sunny" />

    <ImageView
        android:id="@+id/imageViewHumidity"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewWeather"
        app:srcCompat="@drawable/ic_humidity" />

    <ImageView
        android:id="@+id/imageViewWind"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:srcCompat="@drawable/ic_wind" />

    <TextView
        android:id="@+id/textViewTemp"
        android:layout_width="85dp"
        android:layout_height="97dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Temperatura en ºC"
        android:textAlignment="textEnd"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/imageViewWeather" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="75dp"
        android:layout_height="97dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="ºC"
        android:textAlignment="textStart"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewTemp" />

    <TextView
        android:id="@+id/textViewHumedad"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Humedad en %"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewHumidity"
        app:layout_constraintTop_toTopOf="@+id/imageViewHumidity" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="54dp"
        android:layout_height="60dp"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="% De humedad"
        android:textAlignment="textStart"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textViewHumedad"
        app:layout_constraintTop_toTopOf="@+id/textViewHumedad" />

    <TextView
        android:id="@+id/TextViewViento"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Viento en KPH"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewWind"
        app:layout_constraintTop_toTopOf="@+id/imageViewWind" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="54dp"
        android:layout_height="60dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Millas/Hora"
        android:textAlignment="textStart"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TextViewViento"
        app:layout_constraintTop_toTopOf="@+id/TextViewViento" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:hint="Buscar..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
